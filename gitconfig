[user]
  name = Robbie Shade
  email = robbie.shade@gmail.com
[include]
  # Override email on work machine(s).
  path = ~/.config/local/gitconfig
[color]
  ui = auto
  status = auto
  branch = auto
  interactive = auto
[advice]
  statusHints = false
[core]
  excludesfile = ~/.gitignore
  autocrlf = false
  filemode = false
  editor = nvim
[push]
  default = simple
  # `git push` automatically creates remote branch.
	autoSetupRemote = true
[credential]
  helper = cache --timeout=3600
[pull]
  rebase = false
[help]
  autocorrect = 1
[init]
  defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[branch]
	sort = -committerdate
